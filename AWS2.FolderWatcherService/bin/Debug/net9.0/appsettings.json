{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "WatchedFolders": [
        {
            "Name": "VMC",
            "Path": "D:\\FileWatcherDemo",
            "ClientCode": "1002",
            "IncludeSubdirectories": true,
            "SendEmailAlerts": true,
            "SendHttpAlerts": false
        },
        {
            "Name": "AP",
            "Path": "D:\\FileWatcherDemo2",
            "ClientCode": "0",
            "IncludeSubdirectories": true,
            "SendEmailAlerts": true,
            "SendHttpAlerts": false
        },
        {
            "Name": "Outbound",
            "Path": "./watched/outbound",
            "IncludeSubdirectories": false,
            "SendEmailAlerts": false,
            "SendHttpAlerts": true,
            "ReceivesStationEnvDataAPI": "http://localhost:5000/api/notifications"
        }
    ],
    "EmailSettings": {
        "SmtpServer": "smtp.example.com",
        "Port": 587,
        "Username": "your-email@example.com",
        "Password": "your-password",
        "FromEmail": "noreply@example.com"
    }
}
